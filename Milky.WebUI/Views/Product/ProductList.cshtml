@model List<ProductResultDto>
@{
    ViewData["Title"] = "ProductList";
    Layout = "_LayoutAdmin";
    int count = 0;
}

@if (Model.Count() > 0)
{
    <table class="table table-bordered">
        <h3>ÜRÜN LİSTESİ</h3>
        <hr>
        <thead>
            <tr>
                <th></th>
                <th>Başlık</th>
                <th colspan="2"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <td>@count</td>
                    <td>@item.ProductTitle</td>
                    <td><a class="btn btn-outline-warning" asp-controller="Product" asp-action="ProductUpdate" asp-route-id="@item.ProductId">Güncelle</a></td>
                    <td><a class="btn btn-outline-danger" asp-controller="Product" asp-action="ProductDelete" asp-route-id="@item.ProductId">Sil</a></td>
                </tr>
            }
        </tbody>
    </table>
} else
{
    <div class="alert alert-warning">Kayıt bulunmuyor</div>
}
<a class="btn btn-outline-info" asp-controller="Product" asp-action="ProductCreate">Yeni Oluştur</a>