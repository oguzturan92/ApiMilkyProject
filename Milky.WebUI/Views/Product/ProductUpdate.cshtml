@model ProductUpdateDto
@{
    ViewData["Title"] = "ProductUpdate";
    Layout = "_LayoutAdmin";
}

<form asp-controller="Product" asp-action="ProductUpdate" method="post">
    <h3>ÜRÜN GÜNCELLE</h3>
    <hr>
    <input type="hidden" asp-for="ProductId">
    <div class="form-group">
        <label>Başlık</label>
        <input type="text" asp-for="ProductTitle" class="form-control">
        <span asp-validation-for="ProductTitle" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Resim</label>
        <input type="text" asp-for="ProductImage" class="form-control">
        <span asp-validation-for="ProductImage" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Fiyat</label>
        <input type="text" asp-for="ProductPrice" class="form-control">
        <span asp-validation-for="ProductPrice" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>İndirimli Fiyatı</label>
        <input type="text" asp-for="ProductSalePrice" class="form-control">
        <span asp-validation-for="ProductSalePrice" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Hedef Link</label>
        <input type="text" asp-for="ProductLink" class="form-control">
        <span asp-validation-for="ProductLink" class="text-danger"></span>
    </div>
    <hr>
    <button type="submit" class="btn btn-warning">Kaydet</button>
    <a class="btn btn-outline-dark" asp-controller="Product" asp-action="ProductList">Geri</a>
</form>