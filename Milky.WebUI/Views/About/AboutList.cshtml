@model List<AboutResultDto>
@{
    ViewData["Title"] = "AboutList";
    Layout = "_LayoutAdmin";
    int count = 0;
}

@if (Model.Count() > 0)
{
    <table class="table table-bordered">
        <h3>HAKKIMIZDA LİSTESİ</h3>
        <hr>
        <thead>
            <tr>
                <th></th>
                <th>Başlık</th>
                <th colspan="2"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <td>@count</td>
                    <td>@item.AboutTitle</td>
                    <td><a class="btn btn-outline-warning" asp-controller="About" asp-action="AboutUpdate" asp-route-id="@item.AboutId">Güncelle</a></td>
                    <td><a class="btn btn-outline-danger" asp-controller="About" asp-action="AboutDelete" asp-route-id="@item.AboutId">Sil</a></td>
                </tr>
            }
        </tbody>
    </table>
} else
{
    <div class="alert alert-warning">Kayıt bulunmuyor</div>
}
<a class="btn btn-outline-info" asp-controller="About" asp-action="AboutCreate">Yeni Oluştur</a>