@model MessageUpdateDto
@{
    ViewData["Title"] = "MessageUpdate";
    Layout = "_LayoutAdmin";
}

<form>
    <h3>MESAJ DETAY</h3>
    <hr>
    <div class="form-group">
        <label>Tarih</label>
        <input type="text" value="@Model.MessageDate" class="form-control" disabled>
        <span asp-validation-for="MessageDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Ad Soyad</label>
        <input type="text" value="@Model.MessageFullname" class="form-control" disabled>
        <span asp-validation-for="MessageFullname" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Mail</label>
        <input type="text" value="@Model.MessageMail" class="form-control" disabled>
        <span asp-validation-for="MessageMail" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Konu</label>
        <input type="text" value="@Model.MessageSubject" class="form-control" disabled>
        <span asp-validation-for="MessageSubject" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Mesaj</label>
        <input type="text" value="@Model.MessageContent" class="form-control" disabled>
        <span asp-validation-for="MessageContent" class="text-danger"></span>
    </div>
    <hr>
    <a class="btn btn-outline-dark" asp-controller="Message" asp-action="MessageList">Geri</a>
</form>