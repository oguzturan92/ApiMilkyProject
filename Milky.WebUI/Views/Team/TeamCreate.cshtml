@model TeamCreateDto
@{
    ViewData["Title"] = "TeamCreate";
    Layout = "_LayoutAdmin";
}

<form asp-controller="Team" asp-action="TeamCreate" method="post">
    <h3>EKİP ÜYESİ EKLE</h3>
    <hr>
    <div class="form-group">
        <label>Ad Soyad</label>
        <input type="text" asp-for="TeamFullname" class="form-control">
        <span asp-validation-for="TeamFullname" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Departman</label>
        <input type="text" asp-for="TeamDepartment" class="form-control">
        <span asp-validation-for="TeamDepartment" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Resim</label>
        <input type="text" asp-for="TeamImage" class="form-control">
        <span asp-validation-for="TeamImage" class="text-danger"></span>
    </div>
    <hr>
    <button type="submit" class="btn btn-info">Kaydet</button>
    <a class="btn btn-outline-dark" asp-controller="Team" asp-action="TeamList">Geri</a>
</form>