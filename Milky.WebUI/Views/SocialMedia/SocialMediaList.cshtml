@model List<SocialMediaResultDto>
@{
    ViewData["Title"] = "SocialMediaList";
    Layout = "_LayoutAdmin";
    int count = 0;
}

@if (Model.Count() > 0)
{
    <table class="table table-bordered">
        <h3>SOSYAL MEDYA LİSTESİ</h3>
        <hr>
        <thead>
            <tr>
                <th></th>
                <th>İkon</th>
                <th colspan="2"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <td>@count</td>
                    <td>@Html.Raw(item.SocialMediaIcon)</td>
                    <td><a class="btn btn-outline-warning" asp-controller="SocialMedia" asp-action="SocialMediaUpdate" asp-route-id="@item.SocialMediaId">Güncelle</a></td>
                    <td><a class="btn btn-outline-danger" asp-controller="SocialMedia" asp-action="SocialMediaDelete" asp-route-id="@item.SocialMediaId">Sil</a></td>
                </tr>
            }
        </tbody>
    </table>
} else
{
    <div class="alert alert-warning">Kayıt bulunmuyor</div>
}
<a class="btn btn-outline-info" asp-controller="SocialMedia" asp-action="SocialMediaCreate" asp-route-id="@ViewBag.teamId">Yeni Oluştur</a>
<a class="btn btn-outline-dark" asp-controller="Team" asp-action="TeamList">Geri</a>