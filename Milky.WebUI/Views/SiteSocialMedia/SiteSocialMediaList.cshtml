@model List<SiteSocialMediaResultDto>
@{
    ViewData["Title"] = "SiteSocialMediaList";
    Layout = "_LayoutAdmin";
    int count = 0;
}

@if (Model.Count() > 0)
{
    <table class="table table-bordered">
        <h3>SİTE SOSYAL MEDYA LİSTESİ</h3>
        <hr>
        <thead>
            <tr>
                <th></th>
                <th>Başlık</th>
                <th colspan="2"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <td>@count</td>
                    <td>@Html.Raw(item.SiteSocialMediaIcon)</td>
                    <td><a class="btn btn-outline-warning" asp-controller="SiteSocialMedia" asp-action="SiteSocialMediaUpdate" asp-route-id="@item.SiteSocialMediaId">Güncelle</a></td>
                    <td><a class="btn btn-outline-danger" asp-controller="SiteSocialMedia" asp-action="SiteSocialMediaDelete" asp-route-id="@item.SiteSocialMediaId">Sil</a></td>
                </tr>
            }
        </tbody>
    </table>
} else
{
    <div class="alert alert-warning">Kayıt bulunmuyor</div>
}
<a class="btn btn-outline-info" asp-controller="SiteSocialMedia" asp-action="SiteSocialMediaCreate">Yeni Oluştur</a>