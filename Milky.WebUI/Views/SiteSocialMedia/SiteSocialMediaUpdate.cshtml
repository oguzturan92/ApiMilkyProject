@model SiteSocialMediaUpdateDto
@{
    ViewData["Title"] = "SiteSocialMediaUpdate";
    Layout = "_LayoutAdmin";
}

<form asp-controller="SiteSocialMedia" asp-action="SiteSocialMediaUpdate" method="post">
    <h3>SİTE SOSYAL MEDYA GÜNCELLE</h3>
    <hr>
    <input type="hidden" asp-for="SiteSocialMediaId">
    <div class="form-group">
        <label>Link</label>
        <input type="text" asp-for="SiteSocialMediaLink" class="form-control">
        <span asp-validation-for="SiteSocialMediaLink" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>İkon</label>
        <input type="text" asp-for="SiteSocialMediaIcon" class="form-control">
        <span asp-validation-for="SiteSocialMediaIcon" class="text-danger"></span>
    </div>
    <hr>
    <button type="submit" class="btn btn-warning">Kaydet</button>
    <a class="btn btn-outline-dark" asp-controller="SiteSocialMedia" asp-action="SiteSocialMediaList">Geri</a>
</form>