@model BannerCreateDto
@{
    ViewData["Title"] = "BannerCreate";
    Layout = "_LayoutAdmin";
}

<form asp-controller="Banner" asp-action="BannerCreate" method="post">
    <h3>BANNER EKLE</h3>
    <hr>
    <div class="form-group">
        <label>Resim</label>
        <input type="text" asp-for="BannerImage" class="form-control">
        <span asp-validation-for="BannerImage" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Başlık</label>
        <input type="text" asp-for="BannerTitle" class="form-control">
        <span asp-validation-for="BannerTitle" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Alt Başlık</label>
        <input type="text" asp-for="BannerSubTitle" class="form-control">
        <span asp-validation-for="BannerSubTitle" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Link</label>
        <input type="text" asp-for="BannerLink" class="form-control">
        <span asp-validation-for="BannerLink" class="text-danger"></span>
    </div>
    <hr>
    <button type="submit" class="btn btn-info">Kaydet</button>
    <a class="btn btn-outline-dark" asp-controller="Banner" asp-action="BannerList">Geri</a>
</form>