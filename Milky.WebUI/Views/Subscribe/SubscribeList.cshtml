@model List<SubscribeResultDto>
@{
    ViewData["Title"] = "SubscribeList";
    Layout = "_LayoutAdmin";
    int count = 0;
}

@if (Model.Count() > 0)
{
    <table class="table table-bordered">
        <h3>MAİL BÜLTEN ABONE LİSTESİ</h3>
        <hr>
        <thead>
            <tr>
                <th></th>
                <th>Tarih</th>
                <th>Mail</th>
                <th colspan="1"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <td>@count</td>
                    <td>@item.SubscribeDate</td>
                    <td>@item.SubscribeMail</td>
                    <td><a class="btn btn-outline-danger" asp-controller="Subscribe" asp-action="SubscribeDelete" asp-route-id="@item.SubscribeId">Sil</a></td>
                </tr>
            }
        </tbody>
    </table>
} else
{
    <div class="alert alert-warning">Kayıt bulunmuyor</div>
}