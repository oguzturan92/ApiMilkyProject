@model SliderUpdateDto
@{
    ViewData["Title"] = "SliderUpdate";
    Layout = "_LayoutAdmin";
}

<form asp-controller="Slider" asp-action="SliderUpdate" method="post">
    <h3>SLİDER GÜNCELLE</h3>
    <hr>
    <input type="hidden" asp-for="SliderId">
    <div class="form-group">
        <label>Başlık</label>
        <input type="text" asp-for="SliderTitle" class="form-control">
        <span asp-validation-for="SliderTitle" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Alt Başlık</label>
        <input type="text" asp-for="SliderSubTitle" class="form-control">
        <span asp-validation-for="SliderSubTitle" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Link</label>
        <input type="text" asp-for="SliderLink" class="form-control">
        <span asp-validation-for="SliderLink" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Resim</label>
        <input type="text" asp-for="SliderImage" class="form-control">
        <span asp-validation-for="SliderImage" class="text-danger"></span>
    </div>
    <hr>
    <button type="submit" class="btn btn-warning">Kaydet</button>
    <a class="btn btn-outline-dark" asp-controller="Slider" asp-action="SliderList">Geri</a>
</form>