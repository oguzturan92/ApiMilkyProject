@model ServiceCreateDto
@{
    ViewData["Title"] = "ServiceCreate";
    Layout = "_LayoutAdmin";
}

<form asp-controller="Service" asp-action="ServiceCreate" method="post">
    <h3>SERVİS EKLE</h3>
    <hr>
    <div class="form-group">
        <label>Başlık</label>
        <input type="text" asp-for="ServiceTitle" class="form-control">
        <span asp-validation-for="ServiceTitle" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Açıklama</label>
        <input type="text" asp-for="ServiceDescription" class="form-control">
        <span asp-validation-for="ServiceDescription" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Resim</label>
        <input type="text" asp-for="ServiceImage" class="form-control">
        <span asp-validation-for="ServiceImage" class="text-danger"></span>
    </div>
    <hr>
    <button type="submit" class="btn btn-info">Kaydet</button>
    <a class="btn btn-outline-dark" asp-controller="Service" asp-action="ServiceList">Geri</a>
</form>