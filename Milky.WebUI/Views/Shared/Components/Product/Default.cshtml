@model List<ProductResultDto>

<!-- Product Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center mx-auto wow fadeInUp" data-wow-delay="0.1s" style="max-width: 500px;">
            <p class="section-title bg-white text-center text-primary px-3">ÜRÜNLERİMİZ</p>
            <h1 class="mb-5">Sağlıklı Yaşam İçin Süt Ürünlerimiz</h1>
        </div>
        <div class="row gx-4">
            @{int a = 1;}
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4 col-xl-3 wow fadeInUp" data-wow-delay="0.@(a)s">
                    <div class="product-item">
                        <div class="position-relative">
                            <img class="img-fluid" src="@item.ProductImage" alt="">
                            <div class="product-overlay">
                                <a class="btn btn-square btn-secondary rounded-circle m-1" href=""><i class="bi bi-link"></i></a>
                                <a class="btn btn-square btn-secondary rounded-circle m-1" href=""><i class="bi bi-cart"></i></a>
                            </div>
                        </div>
                        <div class="text-center p-4">
                            <a class="d-block h5" href="">@item.ProductTitle</a>
                            <span class="text-primary me-1">@item.ProductSalePrice</span>
                            <span class="text-decoration-line-through">@item.ProductPrice</span>
                        </div>
                    </div>
                </div>
                a += 2;
            }
        </div>
    </div>
</div>
<!-- Product End -->