                            <span>Clita erat ipsum et lorem et sit, sed stet lorem sit clita</span>
                        </div>
                    </div>
                    <a class="btn btn-secondary rounded-pill py-3 px-5" asp-controller="About" asp-action="Index">Daha Fazla</a>
                </div>
            </div>
        </div>
    </div>
    <!-- About End -->
}