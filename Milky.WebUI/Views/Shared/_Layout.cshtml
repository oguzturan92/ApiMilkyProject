<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Milky - Dairy Website Template</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicon -->
    <link href="/Layout/img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Libre+Baskerville:wght@700&family=Open+Sans:wght@400;500;600&display=swap" rel="stylesheet">   

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <!-- Libraries Stylesheet -->
    <link href="/Layout/lib/animate/animate.min.css" rel="stylesheet">
    <link href="/Layout/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="/Layout/lib/lightbox/css/lightbox.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="/Layout/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="/Layout/css/style.css" rel="stylesheet">

    <link rel="stylesheet" href="~/css/sweetalert2.min.css" />
</head>

<body>
    <!-- Spinner Start -->
    <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
        <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;"></div>
    </div>
    <!-- Spinner End -->

    <!-- Topbar Start -->
    <div class="container-fluid bg-dark px-0">
        <div class="row g-0 d-none d-lg-flex">
            <div class="col-lg-6 ps-5 text-start">
                <div class="h-100 d-inline-flex align-items-center text-light">
                    <span>Bizi Takip Edin:</span>
                    @await Component.InvokeAsync("SiteSocialMedia")
                </div>
            </div>
            <div class="col-lg-6 text-end">
                <div class="h-100 bg-secondary d-inline-flex align-items-center text-dark py-2 px-4">
                    <span class="me-2 fw-semi-bold"><i class="fa fa-phone-alt me-2"></i>Telefon:</span>
                    <span>+90 312 123 45 67</span>
                </div>
            </div>
        </div>
    </div>
    <!-- Topbar End -->

    <!-- Navbar Start -->
    <nav class="navbar navbar-expand-lg bg-white navbar-light sticky-top px-4 px-lg-5">
        <a asp-controller="Home" asp-action="Index" class="navbar-brand d-flex align-items-center">
            <h1 class="m-0">Milky</h1>
        </a>
        <button type="button" class="navbar-toggler me-0" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <div class="navbar-nav ms-auto p-4 p-lg-0">
                <a asp-controller="Home" asp-action="Index" class="nav-item nav-link @ViewBag.homeActive">Ana Sayfa</a>
                <a asp-controller="About" asp-action="Index" class="nav-item nav-link @ViewBag.aboutActive">Hakkımızda</a>
                <a asp-controller="Contact" asp-action="Index" class="nav-item nav-link @ViewBag.contactActive">İletişim</a>
                <a asp-controller="Admin" asp-action="Index" class="nav-item nav-link">Admin</a>
            </div>
            <div class="border-start ps-4 d-none d-lg-block">
                <button type="button" class="btn btn-sm p-0"><i class="fa-solid fa-cow fa-2xl" style="color : #404A3D;"></i></button>
            </div>
        </div>
    </nav>
    <!-- Navbar End -->

    <div>
        @if (TempData["icon"] != null)
        {
            <script type="text/javascript">
                window.onload = function () { 
                    Swal.fire({
                        icon: '@TempData["icon"]',
                        title: '@TempData["title"]',
                        html: '@TempData["text"]',
                        showConfirmButton: false,
                        timer: 1500
                    })
                };
            </script>
        }
    </div>

    @RenderBody()

    <!-- Footer Start -->
    <div class="container-fluid bg-dark footer mt-5 py-5 wow fadeIn" data-wow-delay="0.1s">
        <div class="container py-5">
            <div class="row g-5">
                <div class="col-lg-3 col-md-6">
                    <h5 class="text-white mb-4">İletişim Bilgilerimiz</h5>
                    @await Component.InvokeAsync("AddressFooter")
                    <div class="d-flex pt-3">
                        @await Component.InvokeAsync("SiteSocialMediaFooter")
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <h5 class="text-white mb-4">Kategorilerimiz</h5>
                    <a class="btn btn-link" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                    <a class="btn btn-link" asp-controller="About" asp-action="Index">Hakkımızda</a>
                    <a class="btn btn-link" asp-controller="Contact" asp-action="Index">İletişim</a>
                </div>
                <div class="col-lg-3 col-md-6">
                    <h5 class="text-white mb-4">Çalışma Saatlerimiz</h5>
                    <p class="mb-1">Pazartesi - Cuma</p>
                    <h6 class="text-light">09:00 - 19:00</h6>
                    <p class="mb-1">Cumartesi</p>
                    <h6 class="text-light">09:00 - 12:00</h6>
                    <p class="mb-1">Pazar</p>
                    <h6 class="text-light">Kapalı</h6>
                </div>
                <div class="col-lg-3 col-md-6">
                    <h5 class="text-white mb-4">Bülten Aboneliği</h5>
                    <p>Güncel gelişmelerden haberdar olmak için, mail bültenimize ücretsiz abone olun!</p>
                    <form class="position-relative w-100" asp-controller="Subscribe" asp-action="SubscribeCreate" method="post">
                        <input class="form-control bg-transparent w-100 py-3 ps-4 pe-5" type="mail" placeholder="Email Adresiniz" name="SubscribeMail">
                        <button type="submit" class="btn btn-secondary py-2 position-absolute top-0 end-0 mt-2 me-2">Abone Ol</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- Footer End -->

    <!-- Copyright Start -->
    <div class="container-fluid bg-secondary text-body copyright py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
                    &copy; Tüm hakları saklıdır.
                </div>
                <div class="col-md-6 text-center text-md-end">Bu site OĞUZHAN TURAN tarafından yapılmıştır.</div>
            </div>
        </div>
    </div>
    <!-- Copyright End -->

    <!-- Back to Top -->
    <a href="#" class="btn btn-lg btn-primary btn-lg-square rounded-circle back-to-top"><i class="bi bi-arrow-up"></i></a>

    <script src="~/js/sweetalert2.min.js"></script>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/Layout/lib/wow/wow.min.js"></script>
    <script src="/Layout/lib/easing/easing.min.js"></script>
    <script src="/Layout/lib/waypoints/waypoints.min.js"></script>
    <script src="/Layout/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="/Layout/lib/counterup/counterup.min.js"></script>
    <script src="/Layout/lib/parallax/parallax.min.js"></script>
    <script src="/Layout/lib/lightbox/js/lightbox.min.js"></script>

    <!-- Template Javascript -->
    <script src="/Layout/js/main.js"></script>
</body>

</html>